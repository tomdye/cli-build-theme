{
  "name": "@dojo/cli-build-theme",
  "version": "4.0.0-pre",
  "description": "CLI command to build Dojo themes",
  "main": "main.js",
  "scripts": {
    "build": "run-s build:ts dojo-package",
    "build:ts": "tsc",
    "clean": "rimraf dist",
    "dojo-package": "dojo-package",
    "dojo-release": "dojo-release",
    "intern": "intern",
    "lint:ts": "tslint -p .",
    "lint:prettier": "prettier -l \"{src,tests}/**/*.{ts,tsx}\"",
    "lint": "run-p lint:*",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx}\"",
    "release": "run-s lint clean build \"dojo-release -- {@}\" --",
    "test": "run-s clean build intern",
    "uploadCoverage": "codecov --file=coverage/coverage.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dojo/cli-build-theme.git"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/dojo/cli-build-theme/issues"
  },
  "homepage": "https://github.com/dojo/cli-build-theme#readme",
  "devDependencies": {
    "@dojo/cli": "~3.0.0",
    "@dojo/scripts": "~3.0.1",
    "@types/cpx": "1.5.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/mockery": "1.4.29",
    "@types/node": "9.6.5",
    "@types/ora": "1.3.4",
    "@types/rimraf": "2.0.2",
    "@types/sinon": "5.0.1",
    "@types/tapable": "1.0.4",
    "@types/webpack": "4.4.21",
    "codecov": "3.1.0",
    "husky": "0.14.3",
    "lint-staged": "7.2.2",
    "mockery": "2.1.0",
    "@types/mini-css-extract-plugin": "0.2.0",
    "sinon": "6.1.5"
  },
  "dependencies": {
    "@dojo/webpack-contrib": "next",
    "cpx": "1.5.0",
    "cross-spawn": "^6.0.5",
    "css-loader": "2.0.1",
    "mini-css-extract-plugin": "0.4.2",
    "file-loader": "2.0.0",
    "imports-loader": "0.8.0",
    "json-css-module-loader": "1.0.2",
    "npm-run-all": "4.1.5",
    "ora": "3.0.0",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.5.0",
    "rimraf": "2.6.2",
    "style-loader": "0.19.0",
    "ts-loader": "5.3.0",
    "tslint": "5.8.0",
    "typed-css-modules": "0.3.1",
    "typescript": "3.0.1",
    "webpack": "4.25.1",
    "terser-webpack-plugin": "1.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
